{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "jest", "supertest"],
    "strictNullChecks": true,
    "noImplicitReturns": true
  },
  "include": ["src", "src/**/*", "src/types/*"],
  "exclude": ["node_modules"]
}